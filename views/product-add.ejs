<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head.ejs') %>

<body>

	<%- include('./partials/headerLogueado.ejs') %>
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar producto</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form>
				<div class="mb-3">
					<label for="nombreProducto" class="form-label">Nombre del producto:</label>
					<input type="text" class="form-control" id="nombreProducto">
				  </div>
				  <div class="mb-3">
					<label for="descripcion" class="form-label">Descripción:</label>
					<input type="text" class="form-control" id="descripcion">
				  </div>
				<div class="mb-3">
				  <label for="seccion" class="form-label">Sección:</label>
				  <input type="text" class="form-control" id="seccion">
				  <div id="seccionHelp" class="form-text">Secciones: brochas, ojos, labios y rostro</div>
				</div>
				<div class="mb-3">
					<label for="marca" class="form-label">Marca:</label>
					<input type="text" class="form-control" id="marca">
				</div>
				<div class="mb-3">
					<label for="imagen" class="form-label">Imagen:</label>
					<input type="image" class="form-control" id="imagen">
				</div>
				<button type="submit" value="Registrarse" class="btn btn-primary">Submit</button>
			  </form>


	<!-- footer -->
	<%- include('./partials/footer.ejs')  %> 
	<!-- /footer -->
</body>

</html>