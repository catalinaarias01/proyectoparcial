<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head.ejs') %>

<body>
	<%- include('./partials/headerLogueado.ejs') %>
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="https://via.placeholder.com/150" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> Juan Perez
						<a href="/users/profile/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
					<p><b>Mail:</b> jperez@gmail.com <b>Edad:</b> 22</p>
					<p></p>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class= "container products-wrapper">
		<div class="row">
			<div class="col-12"><h2 class="products-title">Mis productos</h2></div>
	<% for(i=0; i < productos.length; i++){ %>
		<div class="col-12 col-sm-6 col-lg-3 product">
			<section class="product-box">
				<a href="/product/<%=productos[i].id %>">
					<figure class="product-box_image">
						<img src=<%= productos[i].img %> alt="producto">
					</figure>
					<article class="product-box_data">
						<h2><%= productos[i].nombre %></h2>
						<p> Marca: <%= productos[i].marca %></p>
						<p><%= productos[i].descripcion %></p>
						<p>Comentarios: 12</p>
					</article>
				</a>
			</section>
		</div>
	<% } %>
</div>
</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer.ejs')  %> 
	<!-- /footer -->
</body>	
</html>