<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head.ejs') %>

<body>
	<!-- Header -->
	<% if (locals.nombre!=undefined) { %>
		<%- include('./partials/headerLogueado.ejs')%>
	<%} else { %>
		<%- include('./partials/header.ejs')%>
	<% } %>
	<!-- /Header -->
	
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%= locals.img_usuario %> " alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> 
						<% if (locals.nombre){%>
							<%=locals.nombre + " " + locals.apellido  %>
						<%}%>
						<a href="/users/profile/edit/<%= locals.id%>">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%=productos.length%> producto<%= productos.length>1 || productos.length == 0 ? "s" : "" %> creado<%= productos.length>1 || productos.length == 0 ? "s" : "" %></li>
					
						<li></li>
					</ul>
					<p><b>Mail:</b> <%=locals.mail%> <b>Edad:</b> <%=locals.edad%></p>
					<p></p>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	
	<div class= "container products-wrapper">
		<div class="row">
			<div class="col-12"><h2 class="products-title">Mis productos</h2></div>
			<% if (productos.length == 0){%>
				<h2>No has creado ningun producto.</h2>

			<%} else{ %>

			
				<% for(let i=0; i < productos.length; i++){ %>
					<div class="col-12 col-sm-6 col-lg-3 product">
						<section class="product-box">
							<a href="/product/<%=productos[i].id %>">
								<figure class="product-box_image">
									<img src="/images/products/<%= productos[i].img_url %>" alt="producto">
								</figure>
								<article class="product-box_data">
									<h2><%= productos[i].nombre_producto %></h2>
									<p> Marca: <%= productos[i].marca %></p>
									<p><%= productos[i].descripcion %></p>
									<p>Comentarios:</p>
								</article>
							</a>
						</section>
					</div>
				<% } %>
				<%} %> 
		</div>
	
		<div class="row">
			<div class="col-12"><h2 class="products-title">Mis productos favoritos</h2></div>
			<% if (productosLikeados.length == 0){%>
				<h2>No has likeado ningun producto.</h2>

			<%} else{ %>

				<% for(let i=0; i < productosLikeados.length; i++){ %>
					<div class="col-12 col-sm-6 col-lg-3 product">
						<section class="product-box">
							<a href="/product/<%=productosLikeados[i].id %>">
								<figure class="product-box_image">
									<img src="/images/products/<%= productosLikeados[i].img_url %>" alt="producto">
								</figure>
								<article class="product-box_data">
									<h2><%= productos[i].nombre_producto %></h2><br>
									<p> Marca: <%= productosLikeados[i].marca %></p><br>
									<p><%= productosLikeados[i].descripcion %></p><br>
									<p>Comentarios:</p>
								</article>
							</a>
						</section>
					</div>
				<% } %>
				<%} %> 
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer.ejs')  %> 
	<!-- /footer -->
</body>	
</html>