<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head.ejs') %>

<body>
	
	<!-- Header -->
	<% if (locals.nombre!=undefined) { %>
		<%- include('./partials/headerLogueado.ejs')%>
	<%} else { %>
		<%- include('./partials/header.ejs')%>
	<% } %>
	<!-- /Header -->
	
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img  src="/images/users/<%=usuario[0].img_usuario%>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= usuario[0].nombre %> <%= usuario[0].apellido %>

					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>

					<p><b>Usuario:</b> <%=usuario[0].nombre_usuario%> <b>Edad:</b> <%=usuario[0].edad%></p>
					<p><b>Mail: </b><%=usuario[0].mail%></p>
					<p><%=usuario[0].productosCreados.length%> producto<%= usuario[0].productosCreados.length>1 ? "s" : "" %> creado<%= usuario[0].productosCreados.length>1 ? "s" : "" %></p>
					<p>Comentarios: <% for (let i = 0; i < usuario[0].productosCreados.length; i++) {%>
									<%= usuario[0].productosCreados[i].comentarios.length%>
								<%}%></p>
		
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class= "container products-wrapper">
		<div class="row">
			<div class="col-12"><h2 class="products-title">Sus productos</h2></div>
	<% for(i=0; i < usuario[0].productosCreados.length; i++){ %>
		<div class="col-12 col-sm-6 col-lg-3 product">
			<section class="product-box">
				<a href="/product/<%=usuario[0].productosCreados[i].id %>">
					<figure class="product-box_image">
						<img src="/images/products/<%= usuario[0].productosCreados[i].img_url %>" alt="producto">
					</figure>
					<article class="product-box_data">
						<h2><%= usuario[0].productosCreados[i].nombre_producto %></h2>
						<p> Marca: <%= usuario[0].productosCreados[i].marca %></p>
						<p><%= usuario[0].productosCreados[i].descripcion %></p>
						<p>Comentarios: <%=usuario[0].productosCreados[i].comentarios.length%></p>
					</article>
				</a>
			</section>
		</div>
	<% } %>
</div>
</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer.ejs')  %> 
	<!-- /footer -->
</body>	
</html>