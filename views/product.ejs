<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head.ejs') %>

<body>
	<!-- Header -->
	<% if (locals.nombre!=undefined) { %>
		<%- include('./partials/headerLogueado.ejs')%>
	<%} else { %>
		<%- include('./partials/header.ejs')%>
	<% } %>
	<!-- /Header -->
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%=productos.nombre_producto%></h2> 
			<p class="product-detail-description">
				<a href="/users/editproducts/<%= productos.id %>">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src=<%= productos.img_url %> alt="" class="product-detail-img">
					<p class="product-detail-description"><%= productos.descripcion%></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<article>
							<img src=<%=usuarios.img_usuario%> alt="">
							<div class="data">
								<p class="user">
									<strong> <a href="/users/<%=comentarios.usuario_id%>"><%=usuarios.nombre_usuario%></a></strong>
									<%=comentarios.texto%>
								</p>
							</div>
						</article>
				 	</section> 
					<form class="form agregar" action="" method="GET">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer.ejs')  %> 
	<!-- /footer -->

</body>	
</html>