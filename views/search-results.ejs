<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head.ejs') %>

<body>
	<!-- Header -->
	<% if (locals.nombre!=undefined) { %>
		<%- include('./partials/headerLogueado.ejs')%>
	<%} else { %>
		<%- include('./partials/header.ejs')%>
	<% } %>
	<!-- /Header -->


	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>
			
			<% if (productos.length > 0) { %>
				<% for(i=0; i < productos.length; i++){ %>
					<div class="col-12 col-sm-6 col-lg-3 product">
						<section class="product-box">
							<a href="/product/<%=productos[i].id %>">
								<figure class="product-box_image">
									<img src=<%= productos[i].img_url %> alt="producto">
								</figure>
								<article class="product-box_data">
									<h2><%= productos[i].nombre_producto %></h2>
									<p> Marca: <%= productos[i].marca %></p>
									<p><%= productos[i].descripcion %></p>
									<p>Comentarios: 12</p>
								</article>
							</a>
						</section>
					</div>
				<% } %>
			<%} else { %>
				<h2>No hay resultados para tu búsqueda</h2>
			<% } %>
			
		</div>
	</div>

	<!-- footer -->
	<%- include('./partials/footer.ejs')  %> 
	<!-- /footer -->
</body>

</html>